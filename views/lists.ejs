<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= dayAndDate %></h1>
    </div>
    <div class="box">
    <% newListItems.forEach(function(i){ %>
        <form action="/delete"  method="post" >
            <div class="item">
                <input type="checkbox" name="deleteItem" onChange="this.form.submit()"  value="<%= i._id%>">
                    <p><%= i.item %></p>
            </div>
            <input type="hidden" name="CustomDelete" value="<%= dayAndDate %>"></input>
        </form>
    <% }) %>  
    <form action="/" method="post" class="item">
        <input type="text" name="newItem" placeholder="Add New Item" autocomplete="off" autofocus="">
        <button type="submit" name="List_Name" value="<%= dayAndDate %>">+</button>
    </form>
    </div>
    <%- include("footer") -%>